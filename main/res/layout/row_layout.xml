<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp" android:orientation="horizontal">
<ImageView
    android:layout_alignParentLeft="true"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:text="loading"
    android:id="@+id/row_img"
    />
    <TextView
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:id="@+id/row_name"
        android:text="hello"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/row_favor"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/favorites_off"
        android:padding="10dp"
        android:background="@null"
        android:onClick="toggleFavor"
        />

    <ImageButton
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/row_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/arrow"
        android:padding="10dp"
        android:background="@null"
        android:onClick="getDetail"
        />

</LinearLayout>